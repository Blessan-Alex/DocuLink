<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/ml_bg"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EMBEDDED DOCUMENTS"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/ml_primary"
        android:paddingBottom="4dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AI-powered document collection for metro operations, maintenance, and safety protocols."
        android:textSize="13sp"
        android:textColor="@color/ml_muted"
        android:paddingBottom="12dp" />

    <TextView
        android:id="@+id/txtDocCounts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11 documents available â€¢ 0 selected"
        android:textSize="12sp"
        android:textColor="@color/ml_muted"
        android:paddingBottom="12dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerDocuments"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>



