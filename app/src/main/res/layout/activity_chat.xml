<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <RelativeLayout
        android:id="@+id/chat_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!-- Top bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <!-- Left menu button -->
        <ImageButton
            android:id="@+id/btnMenu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_button_bg"
            android:src="@drawable/ic_menu"
            android:scaleType="centerInside"
            android:padding="10dp"
            app:tint="#FFFFFF" />

        <!-- Upgrade button -->
        <Button
            android:id="@+id/btnUpgrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:text="DocuLink"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/upgrade_button_bg"
            android:paddingHorizontal="22dp"
            android:paddingVertical="8dp"
            android:textAllCaps="false" />

        <!-- Right circular button -->
        <ImageButton
            android:id="@+id/btnProfile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_button_bg"
            android:src="@drawable/ic_circle_dashed"
            android:scaleType="centerInside"
            android:padding="10dp"
            app:tint="#FFFFFF" />
    </LinearLayout>

    <!-- Chat area -->
    <ScrollView
        android:id="@+id/chatScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomBar"
        android:layout_below="@id/topBar"
        android:padding="16dp"
        android:overScrollMode="never">

        <LinearLayout
            android:id="@+id/chatContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <!-- Bottom input bar -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#000000"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="10dp">

        <!-- Plus button -->
        <ImageButton
            android:id="@+id/btnAdd"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/circle_button_bg"
            android:src="@drawable/ic_add"
            android:scaleType="centerInside"
            android:padding="10dp"
            app:tint="#FFFFFF" />

        <!-- Message input -->
        <EditText
            android:id="@+id/inputMessage"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/input_bg"
            android:hint="Ask DocuLink"
            android:textColorHint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:textSize="16sp"
            android:inputType="text" />

        <!-- Mic / Voice button -->
        <ImageButton
            android:id="@+id/btnMic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_button_bg"
            android:src="@drawable/ic_mic"
            android:scaleType="centerInside"
            android:padding="10dp"
            app:tint="#FFFFFF" />
    </LinearLayout>

</RelativeLayout>

    <LinearLayout
        android:id="@+id/drawerContent"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@color/ml_bg">

        <TextView
            android:id="@+id/drawerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DocuLink Navigation"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/ml_primary"
            android:paddingBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/navDashboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp"
                android:paddingHorizontal="8dp"
                android:text="Kochi Metro Dashboard"
                android:textSize="15sp"
                android:textColor="@color/ml_primary" />

            <TextView
                android:id="@+id/navDocuments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp"
                android:paddingHorizontal="8dp"
                android:text="Embedded Documents"
                android:textSize="15sp"
                android:textColor="@color/ml_primary" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/ml_chip_bg"
            android:layout_marginVertical="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp"
            android:paddingHorizontal="8dp"
            android:text="Settings"
            android:textSize="15sp"
            android:textColor="@color/ml_muted" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp"
            android:paddingHorizontal="8dp"
            android:text="Help &amp; Support"
            android:textSize="15sp"
            android:textColor="@color/ml_muted" />
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
